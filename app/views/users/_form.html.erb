<div class = "sign">
<%= form_with(model: @user, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control',placeholder: "名前" %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control',placeholder: "メールアドレス" %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control',placeholder: "パスワードは最低6文字必要です" %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: 'form-control',placeholder: "確認用パスワード" %>

  <%= f.file_field :icon, id: :user_icon %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>

<% end %>
</div>
